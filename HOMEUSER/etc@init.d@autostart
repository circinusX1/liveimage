PROCESS=/home/$USER/autostart
PROCESSROOT=/home/$USER/autostart-root

stop() {
    kill $(pidof autostart)
    kill $(pidof autostart-root)
    sleep 1
}

start() {
     ${PROCESSROOT} &
     su -c ${PROCESS} -s /bin/bash $USER &
}


case "$1" in
start)
    start
    ;;
stop)
    stop
    ;;
retart)
    stop
    start
    ;;
*)
    echo "Usage: $0 {start|stop|restart}"
esac
